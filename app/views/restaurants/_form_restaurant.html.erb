<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category %>
  <span>
    <%= f.submit "Add a Restaurant", class: "btn btn-primary" %>
    <%= link_to "Back", restaurants_path, class: "btn btn-primary" %>
  </span>
<% end %>
